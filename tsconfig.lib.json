{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "outDir": "dist"
  },
  "include": [
    "src/lib/**/*",
    "src/components/**/*",
    "src/context/**/*",
    "src/hooks/**/*",
    "src/types/**/*",
    "src/utils/**/*"
  ],
  "exclude": [
    "src/demo",
    "src/main.tsx",
    "src/App.tsx"
  ]
}
