{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "types": ["vite/client", "node"]
  },
  "include": [
    "src/lib/**/*",
    "src/components/**/*",
    "src/context/**/*",
    "src/hooks/**/*",
    "src/types/**/*",
    "src/utils/**/*",
    "vite.config.ts"
  ],
  "exclude": [
    "src/demo",
    "src/main.tsx",
    "src/App.tsx"
  ]
}
