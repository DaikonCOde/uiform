{
  "name": "@laus/uiform",
  "version": "0.2.0",
  "description": "A React form library built on JSON Schema with Ant Design components and responsive layouts",
  "type": "module",
  "main": "./dist/uiform.umd.cjs",
  "module": "./dist/uiform.js",
  "types": "./dist/lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/lib/index.d.ts",
      "import": "./dist/uiform.js",
      "require": "./dist/uiform.umd.cjs"
    },
    "./style.css": "./dist/uiform.css"
  },
  "files": [
    "dist",
    "README.md",
    "CLAUDE.md"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.lib.json && vite build",
    "build:lib": "vite build",
    "build:watch": "vite build --watch",
    "yalc:push": "yalc push",
    "dev:yalc": "concurrently \"npm run build:watch\" \"nodemon --watch dist --exec 'yalc push'\"",
    "lint": "eslint .",
    "preview": "vite preview",
    "prepublishOnly": "npm run build:lib"
  },
  "peerDependencies": {
    "antd": "^4.0.0 || ^5.0.0",
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0"
  },
  "peerDependenciesMeta": {
    "antd": {
      "optional": false
    }
  },
  "dependencies": {
    "@laus/json-schema-form": "^1.2.4",
    "dayjs": "^1.11.18"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/node": "^24.10.1",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^5.0.0",
    "antd": "^5.27.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "nodemon": "^3.1.11",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vite-plugin-dts": "^4.5.4"
  },
  "keywords": [
    "react",
    "form",
    "json-schema",
    "antd",
    "ant-design",
    "responsive",
    "typescript"
  ],
  "author": "DaikonCode",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/DaikonCOde/uiform.git"
  },
  "homepage": "https://github.com/DaikonCOde/uiform#readme",
  "bugs": {
    "url": "https://github.com/DaikonCOde/uiform/issues"
  }
}
